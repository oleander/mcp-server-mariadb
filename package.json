{
  "name": "@oleander/mcp-server-mariadb",
  "version": "1.0.7",
  "description": "MCP server for interacting with MariaDB databases based on Node",
  "license": "MIT",
  "author": "Ben Borla (https://github.com/benborla)",
  "type": "module",
  "main": "dist/index.js",
  "preferGlobal": true,
  "bin": {
    "mcp-server-mariadb": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "assets"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "test": "mocha --require ts-node/register test/**/*.test.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "mariadb": "^3.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "chai": "^4.3.6",
    "mcp-proxy": "^2.4.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "node",
    "mcp",
    "ai"
  ]
}
