{
  "name": "@oleander/mcp-server-mariadb",
  "version": "1.0.8",
  "description": "MCP server for interacting with MariaDB databases based on Node",
  "license": "MIT",
  "author": "Ben Borla (https://github.com/benborla)",
  "type": "module",
  "main": "dist/index.js",
  "preferGlobal": true,
  "bin": {
    "mcp-server-mariadb": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "assets"
  ],
  "scripts": {
    "prepare": "yarn compile && yarn build",
    "compile": "tsc",
    "build": "shx chmod +x dist/*.js",
    "test": "docker-compose up --wait-timeout 60 --force-recreate --exit-code-from tester"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "@types/opossum": "^8.1.8",
    "mariadb": "^3.2.3",
    "opossum": "^8.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "mcp-proxy": "^2.4.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "node",
    "mcp",
    "ai"
  ]
}
